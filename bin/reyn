#!/usr/bin/env bash
set -euo pipefail
subcmd="${1:-help}"
case "$subcmd" in
  help) echo "reyn <init|status|sync|run|mod>  — Reyn-OS skeleton launcher";;
  init)  echo "[init] bootstrapping skeleton… (placeholder)";;
  status) echo "[status] OK — skeleton present";;
  sync) echo "[sync] (placeholder)";;
  run) echo "[run] (placeholder)";;
  mod)
    modname="${2:-}"; shift 2 || true
    if [ -z "${modname:-}" ] || [ ! -x "modules/$modname/run.sh" ]; then
      echo "usage: reyn mod <hustle_engine|ghost_engine|brains|sync|studio_video|studio_audio|ai_services>"; exit 2
    fi
    "modules/$modname/run.sh" "$@"
    ;;
  *) echo "unknown subcmd: $subcmd"; exit 1;;
esac